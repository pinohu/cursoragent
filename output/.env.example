# Application Settings
NEXT_PUBLIC_APP_NAME=Cursor Composer Automation
NEXT_PUBLIC_APP_DESCRIPTION=Automate your application development process with AI

# API Settings
NEXT_PUBLIC_API_URL=http://localhost:3000

# Cursor Configuration
CURSOR_PATH=/path/to/cursor  # Update with your Cursor executable path

# Logging
LOG_LEVEL=info  # Options: error, warn, info, debug
ENABLE_FILE_LOGGING=false

# Security
NEXT_PUBLIC_MAX_UPLOAD_SIZE=10485760  # 10MB in bytes

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes in milliseconds

# Feature Flags
NEXT_PUBLIC_ENABLE_BETA_FEATURES=false
NEXT_PUBLIC_ENABLE_ANALYTICS=true 